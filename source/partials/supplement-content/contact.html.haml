.supplement
  %form{:method => "POST", :title => "Contact Form", :action => "#"}

    <!--[if lte IE 9]><label for="name">Name</label><![endif]-->
    %input{:type => "text", :placeholder => "Name", :name => "name"}

    <!--[if lte IE 9]><label for="email">Email</label><![endif]-->
    %input{:type => "email", :placeholder => "Email", :name => "email"}

    <!--[if lte IE 9]><label for="message">Message</label><![endif]-->
    %textarea{:placeholder => "Your message", :rows => "10", :name => "message"}
    
    %button{:type => "submit", :value => "Send"} Send Message